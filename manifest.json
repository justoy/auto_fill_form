{
  "manifest_version": 3,
  "name": "Seamless Form AutoFiller",
  "version": "1.0.0",
  "description": "Auto Fill forms instantly with AI, e.g., Google Gemini.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "dist/background.js"
  },
  
  
  
  "action": {
    "default_title": "Seamless Form AutoFiller"
  },

  "options_page": "settings.html",
  
  "web_accessible_resources": [
    {
      "resources": ["dist/settings.js"],
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ]
    }
  ]
}
