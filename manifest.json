{
  "manifest_version": 3,
  "name": "Seamless Agent Form Filler",
  "version": "1.0.0",
  "description": "Fill out forms instantly with AI. Supports OpenAI GPT, Anthropic Claude, and Google Gemini. Save time, reduce errors, and customize profiles for any website.",
  // "icons": {
  //   "16": "icons/icon16.png",
  //   "48": "icons/icon48.png",
  //   "128": "icons/icon128.png"
  // },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "dist/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_title": "Seamless Agent Form Filler"
  },

  "options_page": "popup.html",
  
  "web_accessible_resources": [
    {
      "resources": ["dist/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
